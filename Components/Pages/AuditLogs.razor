@page "/admin/audit-logs"
@inject ResQLink.Services.AuditService AuditService
@inject ResQLink.Services.AuthState Auth
@inject NavigationManager Navigation
@inject IJSRuntime JS
@using ResQLink.Data.Entities

<div class="audit-logs-root">
    @if (!Auth.IsAdmin())
    {
        <div class="access-denied">
            <i class="bi bi-shield-x" style="font-size: 4rem; color: #dc3545;"></i>
            <h2>Access Denied</h2>
            <p>You must be an administrator to view audit logs.</p>
        </div>
        return;
    }

    <!-- Page header (Reports-style) -->
    <div class="page-header">
        <div>
            <h5 class="page-subtitle"> <i class="bi bi-journal-text"></i> Comprehensive activity tracking and forensic analysis</h5>
        </div>

        <div class="page-actions">
            <button class="btn-secondary" @onclick="ClearFilters" title="Clear filters">
                <i class="bi bi-arrow-counterclockwise"></i>
                Clear
            </button>

            <!-- uses global .btn-primary (green pill) -->
            <button class="btn-primary" @onclick="ExportLogs" title="Export logs">
                <i class="bi bi-download"></i>
                Export Logs
            </button>
        </div>
    </div>

    <!-- Console-style controls row (mirrors Reports console) -->
    <section class="console-panel" aria-label="Audit console">
        <header class="console-head">
            <div class="console-title">AUDIT CONSOLE</div>

            <div class="console-actions">
                <div class="controls-left" role="group" aria-label="Audit filters">
                    <div class="control-item">
                        <label class="sr-only">Start Date</label>
                        <input type="datetime-local" @bind="filterStartDate" class="mini-input" />
                    </div>

                    <div class="control-item">
                        <label class="sr-only">End Date</label>
                        <input type="datetime-local" @bind="filterEndDate" class="mini-input" />
                    </div>

                    <div class="control-item">
                        <label class="sr-only">Action</label>
                        <select @bind="filterAction" class="mini-input">
                            <option value="">All Actions</option>
                            <option value="Login">Login</option>
                            <option value="Logout">Logout</option>
                            <option value="Create">Create</option>
                            <option value="Update">Update</option>
                            <option value="Delete">Delete</option>
                            <option value="View">View</option>
                            <option value="Assign">Assign</option>
                            <option value="Unassign">Unassign</option>
                        </select>
                    </div>

                    <div class="control-item">
                        <label class="sr-only">Entity Type</label>
                        <select @bind="filterEntityType" class="mini-input">
                            <option value="">All Entities</option>
                            <option value="Volunteer">Volunteer</option>
                            <option value="Shelter">Shelter</option>
                            <option value="Disaster">Disaster</option>
                            <option value="Donation">Donation</option>
                            <option value="Admin">Admin</option>
                            <option value="Stock">Stock</option>
                        </select>
                    </div>

                    <div class="control-item">
                        <label class="sr-only">Severity</label>
                        <select @bind="filterSeverity" class="mini-input">
                            <option value="">All Severities</option>
                            <option value="Info">Info</option>
                            <option value="Warning">Warning</option>
                            <option value="Error">Error</option>
                            <option value="Critical">Critical</option>
                        </select>
                    </div>

                    <div class="control-item">
                        <label class="sr-only">User ID</label>
                        <input type="number" @bind="filterUserId" placeholder="User ID" class="mini-input" />
                    </div>
                </div>

                <div class="controls-right">
                    <!-- uses global .btn-primary (green pill) -->
                    <button class="btn-primary" @onclick="ApplyFilters" disabled="@isLoading" aria-disabled="@isLoading">
                        <i class="bi bi-search"></i>
                        <span>@(isLoading ? "Filtering..." : "Apply Filters")</span>
                    </button>
                </div>
            </div>
        </header>
    </section>

    <!-- KPI summary cards -->
    <div class="kpi-panel">
        <div class="kpi-grid">
            <div class="kpi-card">
                <div class="kpi-label">Info</div>
                <div class="kpi-value">@logs.Count(l => l.Severity == "Info")</div>
            </div>

            <div class="kpi-card">
                <div class="kpi-label">Warnings</div>
                <div class="kpi-value">@logs.Count(l => l.Severity == "Warning")</div>
            </div>

            <div class="kpi-card">
                <div class="kpi-label">Errors</div>
                <div class="kpi-value">@logs.Count(l => l.Severity == "Error")</div>
            </div>

            <div class="kpi-card">
                <div class="kpi-label">Critical</div>
                <div class="kpi-value">@logs.Count(l => l.Severity == "Critical")</div>
            </div>
        </div>
    </div>

    <!-- Audit Trail table -->
    <section class="modern-card" aria-label="Audit trail">
        <div class="card-header">
            <h3 class="card-title">
                <i class="bi bi-list-ul"></i>
                Audit Trail (@logs.Count entries)
            </h3>
        </div>

        <div class="table-responsive">
            @if (isLoading)
            {
                <div class="loading-state">
                    <div class="spinner" role="status" aria-hidden="true"></div>
                    <p>Loading audit logs...</p>
                </div>
            }
            else if (!logs.Any())
            {
                <div class="empty-state">
                    <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                    <h4>No Audit Logs Found</h4>
                    <p>No activities match your current filters.</p>
                </div>
            }
            else
            {
                <table class="audit-table">
                    <thead>
                        <tr>
                            <th>Timestamp</th>
                            <th>User</th>
                            <th>Action</th>
                            <th>Entity</th>
                            <th>Description</th>
                            <th class="t-center">Severity</th>
                            <th class="t-center">Status</th>
                            <th>IP Address</th>
                            <th class="t-center">Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in logs)
                        {
                            <tr class="@(log.IsSuccessful ? "" : "failed-action")">
                                <td class="timestamp-cell">
                                    <div>@log.Timestamp.ToLocalTime().ToString("yyyy-MM-dd")</div>
                                    <small>@log.Timestamp.ToLocalTime().ToString("HH:mm:ss")</small>
                                </td>

                                <td>
                                    <div class="user-info">
                                        <strong>@(log.UserName ?? "System")</strong>
                                        <small>@log.UserType @(log.UserId.HasValue ? $"(ID: {log.UserId})" : "")</small>
                                    </div>
                                </td>

                                <td>
                                    <span class="action-badge @GetActionClass(log.Action)">@log.Action</span>
                                </td>

                                <td>
                                    <div>@log.EntityType</div>
                                    @if (log.EntityId.HasValue)
                                    {
                                        <small class="text-muted">ID: @log.EntityId</small>
                                    }
                                </td>

                                <td class="description-cell">@log.Description</td>

                                <td class="t-center">
                                    <span class="severity-badge @( "sev-" + (log.Severity?.ToLower() ?? "info"))">
                                        @log.Severity
                                    </span>
                                </td>

                                <td class="t-center">
                                    <span class="status-badge @(log.IsSuccessful ? "success" : "failed")">
                                        @(log.IsSuccessful ? "Success" : "Failed")
                                    </span>
                                </td>

                                <td>@log.IpAddress</td>

                                <td class="t-center">
                                    <!-- Only icon, neutral button (not green); view-details modal trigger -->
                                    <button class="btn-view-icon" @onclick="() => ShowDetails(log)" aria-label="View details">
                                        <i class="bi bi-eye-fill"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </section>

    <!-- Details Modal (User-details style, with green accent) -->
    @if (selectedLog != null)
    {
        <div class="modal-overlay" @onclick="CloseDetails" role="dialog" aria-modal="true" aria-label="Audit log details">
            <div class="modal-content" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h3 class="modal-title">Audit Log Details</h3>
                    <button class="btn-close" @onclick="CloseDetails" aria-label="Close details">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="details-grid">
                        <div class="detail-item">
                            <label>Log ID:</label>
                            <span>@selectedLog.AuditLogId</span>
                        </div>

                        <div class="detail-item">
                            <label>Timestamp (Local):</label>
                            <span>@selectedLog.Timestamp.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</span>
                        </div>

                        <div class="detail-item">
                            <label>Timestamp (UTC):</label>
                            <span>@selectedLog.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</span>
                        </div>

                        <div class="detail-item">
                            <label>User:</label>
                            <span>@selectedLog.UserName (@selectedLog.UserType)</span>
                        </div>

                        <div class="detail-item">
                            <label>User ID:</label>
                            <span>@selectedLog.UserId</span>
                        </div>

                        <div class="detail-item">
                            <label>Action:</label>
                            <span>@selectedLog.Action</span>
                        </div>

                        <div class="detail-item">
                            <label>Entity Type:</label>
                            <span>@selectedLog.EntityType</span>
                        </div>

                        <div class="detail-item">
                            <label>Entity ID:</label>
                            <span>@selectedLog.EntityId</span>
                        </div>

                        <div class="detail-item">
                            <label>Severity:</label>
                            <span class="severity-badge @( "sev-" + (selectedLog.Severity?.ToLower() ?? "info"))">
                                @selectedLog.Severity
                            </span>
                        </div>

                        <div class="detail-item">
                            <label>Status:</label>
                            <span class="status-badge @(selectedLog.IsSuccessful ? "success" : "failed")">
                                @(selectedLog.IsSuccessful ? "Success" : "Failed")
                            </span>
                        </div>

                        <div class="detail-item">
                            <label>IP Address:</label>
                            <span>@selectedLog.IpAddress</span>
                        </div>

                        <div class="detail-item">
                            <label>Session ID:</label>
                            <span>@selectedLog.SessionId</span>
                        </div>

                        <div class="detail-item full-width">
                            <label>User Agent:</label>
                            <span>@selectedLog.UserAgent</span>
                        </div>

                        <div class="detail-item full-width">
                            <label>Description:</label>
                            <span>@selectedLog.Description</span>
                        </div>

                        @if (!string.IsNullOrEmpty(selectedLog.ErrorMessage))
                        {
                            <div class="detail-item full-width error-message">
                                <label>Error Message:</label>
                                <span>@selectedLog.ErrorMessage</span>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(selectedLog.OldValues))
                        {
                            <div class="detail-item full-width">
                                <label>Old Values:</label>
                                <pre class="json-preview">@selectedLog.OldValues</pre>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(selectedLog.NewValues))
                        {
                            <div class="detail-item full-width">
                                <label>New Values:</label>
                                <pre class="json-preview">@selectedLog.NewValues</pre>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<AuditLog> logs = new();
    private AuditLog? selectedLog;
    private bool isLoading = true;

    private DateTime? filterStartDate;
    private DateTime? filterEndDate;
    private string filterAction = "";
    private string filterEntityType = "";
    private string filterSeverity = "";
    private int? filterUserId;

    protected override async Task OnInitializedAsync()
    {
        if (!Auth.IsAdmin())
        {
            await JS.InvokeVoidAsync("alert", "Access denied. Admin privileges required.");
            return;
        }

        await LoadLogs();
    }

    private async Task LoadLogs()
    {
        isLoading = true;
        try
        {
            logs = await AuditService.GetLogsAsync(
                startDate: filterStartDate,
                endDate: filterEndDate,
                action: string.IsNullOrEmpty(filterAction) ? null : filterAction,
                entityType: string.IsNullOrEmpty(filterEntityType) ? null : filterEntityType,
                severity: string.IsNullOrEmpty(filterSeverity) ? null : filterSeverity,
                userId: filterUserId,
                limit: 500
            );
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error loading audit logs: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ApplyFilters()
    {
        await LoadLogs();
    }

    private async Task ClearFilters()
    {
        filterStartDate = null;
        filterEndDate = null;
        filterAction = "";
        filterEntityType = "";
        filterSeverity = "";
        filterUserId = null;
        await LoadLogs();
    }

    private void ShowDetails(AuditLog log)
    {
        selectedLog = log;
    }

    private void CloseDetails()
    {
        selectedLog = null;
    }

    private string GetActionClass(string action) => action?.ToLowerInvariant() switch
    {
        "login" => "action-login",
        "logout" => "action-logout",
        "create" => "action-create",
        "update" => "action-update",
        "delete" => "action-delete",
        "view" => "action-view",
        "assign" => "action-assign",
        "unassign" => "action-unassign",
        _ => "action-default"
    };

    private async Task ExportLogs()
    {
        await JS.InvokeVoidAsync("alert", "Export functionality coming soon!");
    }
}