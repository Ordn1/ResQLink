@page "/admin/audit-logs"
@inject ResQLink.Services.AuditService AuditService
@inject ResQLink.Services.AuthState Auth
@inject NavigationManager Navigation
@inject IJSRuntime JS
@using ResQLink.Data.Entities

<div class="audit-logs-root">
    @if (!Auth.IsAdmin())
    {
        <div class="access-denied">
            <i class="bi bi-shield-x" style="font-size: 4rem; color: #dc3545;"></i>
            <h2>Access Denied</h2>
            <p>You must be an administrator to view audit logs.</p>
        </div>
        return;
    }

    <!-- Page header -->
    <div class="page-header" style="margin-bottom: 1.5rem;">
        <div>
            <h1 style="font-size: 1.75rem; font-weight: 700; color: #111827; margin: 0;">Audit Logs</h1>
            <p style="font-size: 0.875rem; color: #6b7280; margin: 0.5rem 0 0 0;">
                <i class="bi bi-journal-text"></i> Comprehensive activity tracking and forensic analysis
            </p>
        </div>

        <div class="page-actions" style="display: flex; gap: 0.75rem;">
            <button class="btn-secondary" @onclick="ClearFilters" title="Clear filters" style="display: flex; align-items: center; gap: 0.5rem; padding: 0.5rem 1rem; border-radius: 0.5rem; border: 1px solid #d1d5db; background: white; cursor: pointer;">
                <i class="bi bi-arrow-counterclockwise"></i>
                Clear
            </button>

            <button class="btn-primary" @onclick="ExportLogs" title="Export logs" style="display: flex; align-items: center; gap: 0.5rem; padding: 0.5rem 1rem; border-radius: 0.5rem; background: #059669; color: white; border: none; cursor: pointer;">
                <i class="bi bi-download"></i>
                Export Logs
            </button>
        </div>
    </div>

    <!-- Console-style controls row -->
    <section class="console-panel" aria-label="Audit console" style="background: #f9fafb; border: 1px solid #e5e7eb; border-radius: 0.75rem; padding: 1.5rem; margin-bottom: 1.5rem;">
        <header style="margin-bottom: 1rem;">
            <div style="font-size: 0.75rem; font-weight: 700; color: #6b7280; letter-spacing: 0.05em; margin-bottom: 1rem;">AUDIT CONSOLE</div>

            <div style="display: flex; flex-wrap: wrap; gap: 0.75rem; align-items: flex-end; justify-content: space-between;">
                <div style="display: flex; flex-wrap: wrap; gap: 0.75rem; flex: 1;">
                    <div style="display: flex; flex-direction: column; gap: 0.25rem;">
                        <label style="font-size: 0.75rem; color: #6b7280;">Start Date</label>
                        <input type="datetime-local" @bind="filterStartDate" style="padding: 0.5rem; border: 1px solid #d1d5db; border-radius: 0.375rem; font-size: 0.875rem;" />
                    </div>

                    <div style="display: flex; flex-direction: column; gap: 0.25rem;">
                        <label style="font-size: 0.75rem; color: #6b7280;">End Date</label>
                        <input type="datetime-local" @bind="filterEndDate" style="padding: 0.5rem; border: 1px solid #d1d5db; border-radius: 0.375rem; font-size: 0.875rem;" />
                    </div>

                    <div style="display: flex; flex-direction: column; gap: 0.25rem;">
                        <label style="font-size: 0.75rem; color: #6b7280;">Action</label>
                        <select @bind="filterAction" style="padding: 0.5rem; border: 1px solid #d1d5db; border-radius: 0.375rem; font-size: 0.875rem; min-width: 120px;">
                            <option value="">All Actions</option>
                            <option value="LOGIN">Login</option>
                            <option value="LOGOUT">Logout</option>
                            <option value="CREATE">Create</option>
                            <option value="UPDATE">Update</option>
                            <option value="DELETE">Delete</option>
                            <option value="STOCK_IN">Stock In</option>
                            <option value="STOCK_OUT">Stock Out</option>
                        </select>
                    </div>

                    <div style="display: flex; flex-direction: column; gap: 0.25rem;">
                        <label style="font-size: 0.75rem; color: #6b7280;">Entity</label>
                        <select @bind="filterEntityType" style="padding: 0.5rem; border: 1px solid #d1d5db; border-radius: 0.375rem; font-size: 0.875rem; min-width: 120px;">
                            <option value="">All Entities</option>
                            <option value="User">User</option>
                            <option value="ReliefGood">Relief Good</option>
                            <option value="Stock">Stock</option>
                            <option value="Shelter">Shelter</option>
                            <option value="Disaster">Disaster</option>
                            <option value="Evacuee">Evacuee</option>
                        </select>
                    </div>

                    <div style="display: flex; flex-direction: column; gap: 0.25rem;">
                        <label style="font-size: 0.75rem; color: #6b7280;">Severity</label>
                        <select @bind="filterSeverity" style="padding: 0.5rem; border: 1px solid #d1d5db; border-radius: 0.375rem; font-size: 0.875rem; min-width: 100px;">
                            <option value="">All Severities</option>
                            <option value="Info">Info</option>
                            <option value="Warning">Warning</option>
                            <option value="Error">Error</option>
                            <option value="Critical">Critical</option>
                        </select>
                    </div>

                    <div style="display: flex; flex-direction: column; gap: 0.25rem;">
                        <label style="font-size: 0.75rem; color: #6b7280;">User ID</label>
                        <input type="number" @bind="filterUserId" placeholder="User ID" style="padding: 0.5rem; border: 1px solid #d1d5db; border-radius: 0.375rem; font-size: 0.875rem; width: 100px;" />
                    </div>
                </div>

                <button class="btn-primary" @onclick="ApplyFilters" disabled="@isLoading" style="padding: 0.5rem 1.25rem; background: #059669; color: white; border: none; border-radius: 0.375rem; font-size: 0.875rem; font-weight: 600; cursor: pointer; display: flex; align-items: center; gap: 0.5rem; align-self: flex-end;">
                    <i class="bi bi-search"></i>
                    <span>@(isLoading ? "Filtering..." : "Apply Filters")</span>
                </button>
            </div>
        </header>
    </section>

    <!-- KPI summary cards -->
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; margin-bottom: 1.5rem;">
        <div style="background: white; border: 1px solid #e5e7eb; border-radius: 0.75rem; padding: 1.25rem;">
            <div style="font-size: 0.75rem; font-weight: 600; color: #6b7280; text-transform: uppercase; letter-spacing: 0.05em;">INFO</div>
            <div style="font-size: 2rem; font-weight: 700; color: #3b82f6; margin-top: 0.5rem;">@logs.Count(l => l.Severity == "Info")</div>
        </div>

        <div style="background: white; border: 1px solid #e5e7eb; border-radius: 0.75rem; padding: 1.25rem;">
            <div style="font-size: 0.75rem; font-weight: 600; color: #6b7280; text-transform: uppercase; letter-spacing: 0.05em;">WARNINGS</div>
            <div style="font-size: 2rem; font-weight: 700; color: #f59e0b; margin-top: 0.5rem;">@logs.Count(l => l.Severity == "Warning")</div>
        </div>

        <div style="background: white; border: 1px solid #e5e7eb; border-radius: 0.75rem; padding: 1.25rem;">
            <div style="font-size: 0.75rem; font-weight: 600; color: #6b7280; text-transform: uppercase; letter-spacing: 0.05em;">ERRORS</div>
            <div style="font-size: 2rem; font-weight: 700; color: #ef4444; margin-top: 0.5rem;">@logs.Count(l => l.Severity == "Error")</div>
        </div>

        <div style="background: white; border: 1px solid #e5e7eb; border-radius: 0.75rem; padding: 1.25rem;">
            <div style="font-size: 0.75rem; font-weight: 600; color: #6b7280; text-transform: uppercase; letter-spacing: 0.05em;">CRITICAL</div>
            <div style="font-size: 2rem; font-weight: 700; color: #dc2626; margin-top: 0.5rem;">@logs.Count(l => l.Severity == "Critical")</div>
        </div>
    </div>

    <!-- Audit Trail table -->
    <section style="background: white; border: 1px solid #e5e7eb; border-radius: 0.75rem; overflow: hidden;">
        <div style="padding: 1.25rem; border-bottom: 1px solid #e5e7eb;">
            <h3 style="font-size: 1.125rem; font-weight: 600; color: #111827; margin: 0; display: flex; align-items: center; gap: 0.5rem;">
                <i class="bi bi-list-ul"></i>
                Audit Trail (@TotalFiltered entries)
            </h3>
        </div>

        <div style="overflow-x: auto; max-height: calc(100vh - 600px); overflow-y: auto;">
            @if (isLoading)
            {
                <div style="padding: 4rem; text-align: center;">
                    <div class="spinner" style="border: 3px solid #e5e7eb; border-top-color: #059669; border-radius: 50%; width: 40px; height: 40px; animation: spin 1s linear infinite; margin: 0 auto 1rem;"></div>
                    <p style="color: #6b7280;">Loading audit logs...</p>
                </div>
            }
            else if (!PagedLogs.Any())
            {
                <div style="padding: 4rem; text-align: center;">
                    <i class="bi bi-inbox" style="font-size: 3rem; color: #d1d5db;"></i>
                    <h4 style="margin-top: 1rem; color: #6b7280;">No Audit Logs Found</h4>
                    <p style="color: #9ca3af;">No activities match your current filters.</p>
                </div>
            }
            else
            {
                <table style="width: 100%; border-collapse: collapse; font-size: 0.875rem;">
                    <thead style="background: #f9fafb; position: sticky; top: 0; z-index: 10;">
                        <tr>
                            <th style="padding: 0.75rem 1rem; text-align: left; font-weight: 600; color: #374151; border-bottom: 1px solid #e5e7eb;">Timestamp</th>
                            <th style="padding: 0.75rem 1rem; text-align: left; font-weight: 600; color: #374151; border-bottom: 1px solid #e5e7eb;">User</th>
                            <th style="padding: 0.75rem 1rem; text-align: left; font-weight: 600; color: #374151; border-bottom: 1px solid #e5e7eb;">Action</th>
                            <th style="padding: 0.75rem 1rem; text-align: left; font-weight: 600; color: #374151; border-bottom: 1px solid #e5e7eb;">Entity</th>
                            <th style="padding: 0.75rem 1rem; text-align: left; font-weight: 600; color: #374151; border-bottom: 1px solid #e5e7eb;">Description</th>
                            <th style="padding: 0.75rem 1rem; text-align: center; font-weight: 600; color: #374151; border-bottom: 1px solid #e5e7eb;">Severity</th>
                            <th style="padding: 0.75rem 1rem; text-align: center; font-weight: 600; color: #374151; border-bottom: 1px solid #e5e7eb;">Status</th>
                            <th style="padding: 0.75rem 1rem; text-align: center; font-weight: 600; color: #374151; border-bottom: 1px solid #e5e7eb;">Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in PagedLogs)
                        {
                            <tr style="border-bottom: 1px solid #f3f4f6; @(log.IsSuccessful ? "" : "background: #fef2f2;")">
                                <td style="padding: 0.75rem 1rem; white-space: nowrap;">
                                    <div style="font-weight: 500; color: #111827;">@log.Timestamp.ToLocalTime().ToString("MMM dd, yyyy")</div>
                                    <small style="color: #6b7280;">@log.Timestamp.ToLocalTime().ToString("HH:mm:ss")</small>
                                </td>

                                <td style="padding: 0.75rem 1rem;">
                                    <div style="font-weight: 500; color: #111827;">@(log.UserName ?? "System")</div>
                                    <small style="color: #6b7280;">@log.UserType @(log.UserId.HasValue ? $"(ID: {log.UserId})" : "")</small>
                                </td>

                                <td style="padding: 0.75rem 1rem;">
                                    <span style="@GetActionStyle(log.Action)">@log.Action</span>
                                </td>

                                <td style="padding: 0.75rem 1rem;">
                                    <div style="color: #111827;">@log.EntityType</div>
                                    @if (log.EntityId.HasValue)
                                    {
                                        <small style="color: #6b7280;">ID: @log.EntityId</small>
                                    }
                                </td>

                                <td style="padding: 0.75rem 1rem; max-width: 300px;">
                                    <div style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap;" title="@log.Description">
                                        @log.Description
                                    </div>
                                </td>

                                <td style="padding: 0.75rem 1rem; text-align: center;">
                                    <span style="@GetSeverityStyle(log.Severity)">@log.Severity</span>
                                </td>

                                <td style="padding: 0.75rem 1rem; text-align: center;">
                                    <span style="@GetStatusStyle(log.IsSuccessful)">
                                        @(log.IsSuccessful ? "Success" : "Failed")
                                    </span>
                                </td>

                                <td style="padding: 0.75rem 1rem; text-align: center;">
                                    <button @onclick="() => ShowDetails(log)" style="background: none; border: none; color: #059669; cursor: pointer; font-size: 1.125rem;" title="View details">
                                        <i class="bi bi-eye-fill"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>

        <!-- Pagination Footer -->
        <div style="padding: 1rem 1.25rem; border-top: 1px solid #e5e7eb; display: flex; justify-content: space-between; align-items: center; background: #f9fafb;">
            <div style="font-size: 0.875rem; color: #6b7280;">
                Showing @StartIndex–@EndIndex of @TotalFiltered entries
            </div>
            <div style="display: flex; align-items: center; gap: 0.5rem;">
                <label style="font-size: 0.875rem; color: #6b7280;">Rows:</label>
                <select @bind="pageSize" @bind:after="ResetPagination" style="padding: 0.375rem 0.5rem; border: 1px solid #d1d5db; border-radius: 0.375rem; font-size: 0.875rem;">
                    <option>10</option>
                    <option>25</option>
                    <option>50</option>
                    <option>100</option>
                </select>
                <button @onclick="PrevPage" disabled="@(_pageIndex == 0)" style="padding: 0.375rem 0.75rem; border: 1px solid #d1d5db; border-radius: 0.375rem; background: white; cursor: pointer; font-size: 0.875rem; @(_pageIndex == 0 ? "opacity: 0.5; cursor: not-allowed;" : "")">Prev</button>
                <span style="font-size: 0.875rem; color: #6b7280;">Page @(_pageIndex + 1) of @TotalPages</span>
                <button @onclick="NextPage" disabled="@(_pageIndex >= TotalPages - 1)" style="padding: 0.375rem 0.75rem; border: 1px solid #d1d5db; border-radius: 0.375rem; background: white; cursor: pointer; font-size: 0.875rem; @(_pageIndex >= TotalPages - 1 ? "opacity: 0.5; cursor: not-allowed;" : "")">Next</button>
            </div>
        </div>
    </section>

    <!-- Details Modal -->
    @if (selectedLog != null)
    {
        <div style="position: fixed; inset: 0; background: rgba(0, 0, 0, 0.5); display: flex; align-items: center; justify-content: center; z-index: 50; padding: 1rem;" @onclick="CloseDetails">
            <div style="background: white; border-radius: 0.75rem; max-width: 600px; width: 100%; max-height: 90vh; overflow-y: auto; box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);" @onclick:stopPropagation="true">
                <div style="padding: 1.5rem; border-bottom: 1px solid #e5e7eb; display: flex; justify-content: space-between; align-items: center;">
                    <h3 style="font-size: 1.25rem; font-weight: 600; color: #111827; margin: 0;">Audit Log Details</h3>
                    <button @onclick="CloseDetails" style="background: none; border: none; font-size: 1.5rem; color: #6b7280; cursor: pointer; padding: 0; line-height: 1;">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </div>

                <div style="padding: 1.5rem; display: grid; gap: 1rem;">
                    <div style="display: grid; grid-template-columns: 140px 1fr; gap: 0.5rem;">
                        <label style="font-weight: 600; color: #374151;">Log ID:</label>
                        <span style="color: #6b7280;">@selectedLog.AuditLogId</span>
                    </div>

                    <div style="display: grid; grid-template-columns: 140px 1fr; gap: 0.5rem;">
                        <label style="font-weight: 600; color: #374151;">Timestamp:</label>
                        <span style="color: #6b7280;">@selectedLog.Timestamp.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</span>
                    </div>

                    <div style="display: grid; grid-template-columns: 140px 1fr; gap: 0.5rem;">
                        <label style="font-weight: 600; color: #374151;">User:</label>
                        <span style="color: #6b7280;">@selectedLog.UserName (@selectedLog.UserType)</span>
                    </div>

                    <div style="display: grid; grid-template-columns: 140px 1fr; gap: 0.5rem;">
                        <label style="font-weight: 600; color: #374151;">Action:</label>
                        <span style="@GetActionStyle(selectedLog.Action)">@selectedLog.Action</span>
                    </div>

                    <div style="display: grid; grid-template-columns: 140px 1fr; gap: 0.5rem;">
                        <label style="font-weight: 600; color: #374151;">Entity:</label>
                        <span style="color: #6b7280;">@selectedLog.EntityType @(selectedLog.EntityId.HasValue ? $"(ID: {selectedLog.EntityId})" : "")</span>
                    </div>

                    <div style="display: grid; grid-template-columns: 140px 1fr; gap: 0.5rem;">
                        <label style="font-weight: 600; color: #374151;">Severity:</label>
                        <span style="@GetSeverityStyle(selectedLog.Severity)">@selectedLog.Severity</span>
                    </div>

                    <div style="display: grid; grid-template-columns: 140px 1fr; gap: 0.5rem;">
                        <label style="font-weight: 600; color: #374151;">Status:</label>
                        <span style="@GetStatusStyle(selectedLog.IsSuccessful)">
                            @(selectedLog.IsSuccessful ? "Success" : "Failed")
                        </span>
                    </div>

                    <div style="display: grid; grid-template-columns: 140px 1fr; gap: 0.5rem;">
                        <label style="font-weight: 600; color: #374151;">Description:</label>
                        <span style="color: #6b7280;">@selectedLog.Description</span>
                    </div>

                    @if (!string.IsNullOrEmpty(selectedLog.IpAddress))
                    {
                        <div style="display: grid; grid-template-columns: 140px 1fr; gap: 0.5rem;">
                            <label style="font-weight: 600; color: #374151;">IP Address:</label>
                            <span style="color: #6b7280;">@selectedLog.IpAddress</span>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(selectedLog.SessionId))
                    {
                        <div style="display: grid; grid-template-columns: 140px 1fr; gap: 0.5rem;">
                            <label style="font-weight: 600; color: #374151;">Session ID:</label>
                            <span style="color: #6b7280; word-break: break-all; font-size: 0.75rem;">@selectedLog.SessionId</span>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(selectedLog.ErrorMessage))
                    {
                        <div style="padding: 1rem; background: #fef2f2; border-left: 4px solid #ef4444; border-radius: 0.375rem;">
                            <label style="font-weight: 600; color: #991b1b; display: block; margin-bottom: 0.5rem;">Error Message:</label>
                            <span style="color: #dc2626;">@selectedLog.ErrorMessage</span>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(selectedLog.OldValues))
                    {
                        <div>
                            <label style="font-weight: 600; color: #374151; display: block; margin-bottom: 0.5rem;">Old Values:</label>
                            <pre style="background: #f9fafb; padding: 1rem; border-radius: 0.375rem; overflow-x: auto; font-size: 0.75rem; color: #374151;">@selectedLog.OldValues</pre>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(selectedLog.NewValues))
                    {
                        <div>
                            <label style="font-weight: 600; color: #374151; display: block; margin-bottom: 0.5rem;">New Values:</label>
                            <pre style="background: #f0fdf4; padding: 1rem; border-radius: 0.375rem; overflow-x: auto; font-size: 0.75rem; color: #374151;">@selectedLog.NewValues</pre>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

<style>
    @@keyframes spin {
        to { transform: rotate(360deg); }
    }
</style>

@code {
    private List<AuditLog> logs = new();
    private AuditLog? selectedLog;
    private bool isLoading = true;

    private DateTime? filterStartDate;
    private DateTime? filterEndDate;
    private string filterAction = "";
    private string filterEntityType = "";
    private string filterSeverity = "";
    private int? filterUserId;
    private string filterTransactionType = "";

    // Pagination
    private int _pageIndex = 0;
    private int pageSize = 25;

    private int TotalFiltered => logs.Count;
    private int TotalPages => Math.Max((int)Math.Ceiling(TotalFiltered / (double)pageSize), 1);
    private int StartIndex => TotalFiltered == 0 ? 0 : (_pageIndex * pageSize) + 1;
    private int EndIndex => Math.Min((_pageIndex + 1) * pageSize, TotalFiltered);
    private IEnumerable<AuditLog> PagedLogs => logs.Skip(_pageIndex * pageSize).Take(pageSize);

    protected override async Task OnInitializedAsync()
    {
        if (!Auth.IsAdmin())
        {
            await JS.InvokeVoidAsync("alert", "Access denied. Admin privileges required.");
            return;
        }

        await LoadLogs();
    }

    private async Task LoadLogs()
    {
        isLoading = true;
        try
        {
            logs = await AuditService.GetLogsAsync(
                startDate: filterStartDate,
                endDate: filterEndDate,
                action: string.IsNullOrEmpty(filterAction) ? null : filterAction,
                entityType: string.IsNullOrEmpty(filterEntityType) ? null : filterEntityType,
                severity: string.IsNullOrEmpty(filterSeverity) ? null : filterSeverity,
                userId: filterUserId,
                limit: 1000
            );
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error loading audit logs: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ApplyFilters()
    {
        _pageIndex = 0;
        await LoadLogs();
    }

    private async Task ClearFilters()
    {
        filterStartDate = null;
        filterEndDate = null;
        filterAction = "";
        filterEntityType = "";
        filterSeverity = "";
        filterUserId = null;
        filterTransactionType = "";
        _pageIndex = 0;
        await LoadLogs();
    }

    private void ShowDetails(AuditLog log)
    {
        selectedLog = log;
    }

    private void CloseDetails()
    {
        selectedLog = null;
    }

    private void PrevPage()
    {
        if (_pageIndex > 0) _pageIndex--;
    }

    private void NextPage()
    {
        if (_pageIndex < TotalPages - 1) _pageIndex++;
    }

    private void ResetPagination()
    {
        _pageIndex = 0;
    }

    private string GetActionStyle(string action)
    {
        var (bg, text) = action?.ToUpperInvariant() switch
        {
            "LOGIN" => ("#dbeafe", "#1e40af"),
            "LOGOUT" => ("#e0e7ff", "#4338ca"),
            "CREATE" => ("#d1fae5", "#065f46"),
            "UPDATE" => ("#fef3c7", "#92400e"),
            "DELETE" => ("#fee2e2", "#991b1b"),
            "STOCK_IN" => ("#d1fae5", "#065f46"),
            "STOCK_OUT" => ("#fce7f3", "#831843"),
            _ => ("#f3f4f6", "#374151")
        };
        return $"display: inline-block; padding: 0.25rem 0.75rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 600; background: {bg}; color: {text};";
    }

    private string GetSeverityStyle(string? severity)
    {
        var (bg, text) = severity?.ToUpperInvariant() switch
        {
            "INFO" => ("#dbeafe", "#1e40af"),
            "WARNING" => ("#fef3c7", "#92400e"),
            "ERROR" => ("#fee2e2", "#991b1b"),
            "CRITICAL" => ("#fee2e2", "#7f1d1d"),
            _ => ("#f3f4f6", "#374151")
        };
        return $"display: inline-block; padding: 0.25rem 0.75rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 600; background: {bg}; color: {text};";
    }

    private string GetStatusStyle(bool isSuccessful)
    {
        var (bg, text) = isSuccessful
            ? ("#d1fae5", "#065f46")
            : ("#fee2e2", "#991b1b");
